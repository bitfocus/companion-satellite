		"conf": "^15.0.2",
		"debounce-fn": "^6.0.0",
		"electron-store": "^11.0.2",
		"electron-updater": "^6.8.2",
		"exit-hook": "^5.0.1",
		"infinitton-idisplay": "^1.2.0",
		"koa": "^3.1.1",
		"koa-body": "^6.0.1",
		"koa-router": "^14.0.0",
		"koa-static": "^5.0.0",
		"nanoid": "^5.1.6",
		"node-hid": "^3.3.0",
		"pino": "^10.3.0",
		"pino-pretty": "^13.1.3",
		"semver": "^7.7.3",
