		"@types/semver": "^7.7.1",
		"@types/ws": "^8.18.1",
		"electron": "40.1.0",
		"electron-builder": "^26.7.0",
		"rimraf": "^6.1.2",
		"tsx": "^4.21.0"
	},
	"engines": {
		"node": "^24.13"
	},
	"dependencies": {
		"@blackmagic-controller/node": "^1.1.0",
		"@elgato-stream-deck/node": "^7.4.0",
		"@julusian/bonjour-service": "^1.4.2",
