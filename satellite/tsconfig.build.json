{
	"extends": "@tsconfig/node20/tsconfig.json",
	"include": ["src/**/*.ts", "src/**/*.cts", "src/**/*.mts"],
	"exclude": ["node_modules/**", "src/**/*spec.ts", "src/**/__tests__/*", "src/**/__mocks__/*"],
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",
		"baseUrl": "..",
		"paths": {
			"#modules/*/plugin": ["modules/*/dist/main.js"],
			"#modules/*/manifest": ["modules/*/companion/manifest.json"]
		},
		"types": ["node"],
		"lib": ["dom"],
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"declaration": true
	}
}
