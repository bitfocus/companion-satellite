{
  "name": "companion-satellite",
  "version": "2.6.0",
  "description": "Satellite Streamdeck connector for Bitfocus Companion",
  "author": {
    "name": "Julian Waller",
    "email": "git@julusian.co.uk",
    "url": "https://github.com/julusian"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitfocus/companion-satellite.git"
  },
  "bugs": {
    "url": "https://github.com/bitfocus/companion-satellite/issues"
  },
  "homepage": "https://github.com/bitfocus/companion-satellite#readme",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "satellite",
    "webui",
    "modules/*"
  ],
  "scripts": {
    "postinstall": "husky",
    "dev": "yarn workspace satellite dev",
    "dev:electron": "yarn workspace satellite dev:electron",
    "dev:webui": "yarn workspace webui dev",
    "build:openapi": "openapi-typescript ./openapi.yaml -o ./satellite/src/generated/openapi.ts",
    "build:schema": "tsx tools/schema_compile.mts",
    "build:modules": "tsx tools/build-modules.mts",
    "generate:module-index": "tsx tools/generate-module-index.mts",
    "build": "yarn build:modules && yarn generate:module-index && yarn workspaces foreach -A --exclude 'companion-surface-*' run build",
    "lint:raw": "eslint",
    "lint": "eslint .",
    "license-validate": "sofie-licensecheck",
    "dist": "run build && tsx tools/build_electron.mts"
  },
  "devDependencies": {
    "@sofie-automation/eslint-plugin": "^0.2.1",
    "@tsconfig/node20": "^20.1.8",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "husky": "^9.1.7",
    "json-schema-to-typescript": "^15.0.4",
    "lint-staged": "^16.2.7",
    "openapi-typescript": "^7.10.1",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.47.0",
    "zx": "^8.8.5"
  },
  "engines": {
    "node": "^22.19"
  },
  "packageManager": "yarn@4.12.0",
  "resolutions": {
    "app-builder-lib@npm:26.0.20": "patch:app-builder-lib@npm%3A26.0.20#~/.yarn/patches/app-builder-lib-npm-26.0.20-3490051175.patch"
  }
}
